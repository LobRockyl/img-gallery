extends layout

block content
  h1 #{title}
  ul.list-group
    if images
      each article, i in images
        
        if (i + 1) % 3 == 1
          li.list-group-item
            a(href="/show/"+article._id)= article.ImgName
            img(src=article.ImgURL style="max-height: 100px; max-width: 100px;")
        else
          
            a(href="/show/"+article._id)= article.ImgName
            img(src=article.ImgURL style="max-height: 100px; max-width: 100px;")



